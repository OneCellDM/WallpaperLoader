<Window x:Class="WallpaperLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallpaperLoader"
        mc:Ignorable="d"
        Title="MainWindow" Height="482" Width="694">
    <Window.Resources>


    </Window.Resources>
    <Grid Background="{DynamicResource BackGroundBrush}">
        <TabControl SelectionChanged="TabControl_SelectionChanged" Background="{x:Null}">
            <TabItem Style="{DynamicResource TabItemStyle}" x:Name="RandomImageTabItem" Header="Случайное изображение">

            </TabItem>
            <TabItem  x:Name="SearchTabItem" Header="Поиск изображений" Style="{DynamicResource TabItemStyle}" Margin="-2,-2,-2,-10">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
